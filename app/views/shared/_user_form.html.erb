<%= form_for(@user) do |f| %>
      <%= render 'shared/form_errors', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= render partial: 'shared/pinboard', locals: {:f => f }  %>

      <%= render partial: 'shared/password', locals: {:f => f } %>

      <%= f.submit button_text, class: "btn btn-large btn-primary" %>
<% end %>
