<% @user ||= current_user %>
<div class="stats followers">
    <a href="<%= following_user_path(@user) %>">
        following
        <strong id="following" class="stat">
            <%= @user.followed_users.count %>
        </strong>
    </a>
    <a href="<%= followers_user_path(@user) %>">
        followers
        <strong id="followers" class="stat">
            <%= @user.followers.count %>
        </strong>
    </a>
</div>
<div class="stats sharing">
    <a href="<%= links_user_path(@user) %>">
        shared items
        <strong id="shared-items" class="stat">
            <%= @user.links.count %>
        </strong>
    </a>
</div>
<div class="stats sharing">
    <a href="<%= comments_user_path(@user) %>">
        comments
        <strong id="comments" class="stat">
            <%= @user.comments.count %>
        </strong>
    </a>
</div>
