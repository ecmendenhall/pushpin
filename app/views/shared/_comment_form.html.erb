<%= form_for(@comment) do |f| %>
    <%= render 'shared/form_errors', object: f.object %>
    <%= f.hidden_field :link_id, value: @link.id  %>
    <div class="field">
    <%= f.text_area :content, placeholder: "Comment..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
